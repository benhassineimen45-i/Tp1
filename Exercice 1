package tp1;
import java.util.Scanner;

public class ex1 {
    public static void main(String[] args) {
        // TODO Auto-generated method stub
        Scanner input = new Scanner(System.in);

        System.out.println("donner le premier nombre");
        int a = input.nextInt();

        System.out.println("donner le deuxieme nombre");
        int b = input.nextInt();

        System.out.println("donner le troisieme nombre");
        int c = input.nextInt();

        int d = a + b + c;
        System.out.println("la valeur d = " + d);

        int p = a * b * c;
        System.out.println("la valeur de p = " + p);

        int m = p / d;
        System.out.println("la valeur de m = " + m);

        System.out.println("donner un nom");
        input.nextLine(); // pour consommer la ligne restante
        String n = input.nextLine();

        System.out.println("Bonjour " + n + ", la somme est d = " + d);
    }
}
